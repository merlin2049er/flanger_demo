<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for(@instrument) do |f| %>
      <%= f.error_notification %>
        <div class="field">
          <div class="control">
            <%= f.input :brand, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :model, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="select">
          <%= f.input :condition, required: true, input_html: { class:"select" }, wrapper: false, label_html: { class:"label" } %>
        </div>

        <div class="select">
          <%= f.input :finish , required: true, input_html: { class:"select" }, wrapper: false, label_html: { class:"label" } %>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :title , required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :price , required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label">Add images</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input" },label: false, wrapper: false  %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Choose a fileâ€¦</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
              <%= link_to 'Back', instruments_path, class:'button is-light' %>
          </div>
        </div>
        <% end %>
  </div>
</div>